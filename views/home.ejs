<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Management Application</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="header">
    <a href="/"><img src="https://join.pedalstart.com/src/2021/05/logo.png" alt="Brand logo"></a>
    <nav class="navbar">
      <ul class="navbar-lists" id="myTopnav">
        <li><i class="fas fa-home"></i><a class="navbar-link home-link" href="#">Home</a></li>
        <li><i class="fas fa-plus"></i><a class="navbar-link about-link" href="/tasks">Add Task</a></li>
      </ul>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </nav>
  </header>

  <main>
    <div class="PedalStart-img-container">
      <div class="img-container">
        <img src="https://pedalstart.com/startup/images/2023-08-8-1024x683.jpg" alt="PedalStart img" class="PedalStart-img">
        <h1 class="img-title">Welcome To Task Management App</h1>
      </div>
    </div>

    <section id="your-task">
      <h2>Your Task List</h2>
      <ul>
        <% tasks.forEach(task => { %>
          <li>
            <i class="fas fa-clipboard-list task-icon"></i> &nbsp;&nbsp;  
            <a ><%= task.title %></a>
            <div class="task-buttons">
              <form action="/tasks/delete/<%= task._id %>" method="POST" style="display:inline;">
                <button type="submit" class="delete-btn"> <i class="fas fa-trash-alt"></i>Delete</button>
              </form>
              <a href="/tasks/edit/<%= task._id %>" class="button edit-btn"> <i class="fas fa-edit"></i>Edit</a>
              <a href="/tasks/<%= task._id %>" class="button view-details-btn"><i class="fas fa-eye"></i> View</a>
            </div>
          </li>
        <% }) %>
      </ul>
    </section>
  </main>

  <footer>
    <p>&copy; 2024 Pedalstart Task Management App. All rights reserved.</p>
  </footer>

  <script src="/js/scripts.js"></script>
</body>
</html>
